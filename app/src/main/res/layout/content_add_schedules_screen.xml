<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_add_schedules_screen"
    tools:context="com.bb.hp_pc.bussmartv3.AddSchedulesScreen">

    <!-- Content Map -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:orientation="vertical"
        android:padding="15dp">

        <ScrollView
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="sans-serif-light"
                    android:layout_marginTop="0dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Bus Number"
                    android:textColor="#ff7600"
                    android:shadowColor="#000"
                    android:shadowDx="-1"
                    android:shadowDy="-1"
                    android:shadowRadius="1"
                    android:textSize="15dp"/>

                <EditText
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/bus_number"/>

                <TextView
                    android:fontFamily="sans-serif-light"
                    android:layout_marginTop="20dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Bus Type"
                    android:textColor="#ff7600"
                    android:shadowColor="#000"
                    android:shadowDx="-1"
                    android:shadowDy="-1"
                    android:shadowRadius="1"
                    android:textSize="15dp"/>

                <Spinner
                    android:layout_marginTop="5dp"
                    android:id="@+id/bus_type"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:fontFamily="sans-serif-light"
                    android:layout_marginTop="20dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Driver Name"
                    android:textColor="#ff7600"
                    android:shadowColor="#000"
                    android:shadowDx="-1"
                    android:shadowDy="-1"
                    android:shadowRadius="1"
                    android:textSize="15dp"/>

                <EditText
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/bus_driver"/>

                <TextView
                    android:fontFamily="sans-serif-light"
                    android:layout_marginTop="20dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Source"
                    android:textColor="#ff7600"
                    android:shadowColor="#000"
                    android:shadowDx="-1"
                    android:shadowDy="-1"
                    android:shadowRadius="1"
                    android:textSize="15dp"/>

                <EditText
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/bus_source"/>

                <TextView
                    android:fontFamily="sans-serif-light"
                    android:layout_marginTop="20dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Destination"
                    android:textColor="#ff7600"
                    android:shadowColor="#000"
                    android:shadowDx="-1"
                    android:shadowDy="-1"
                    android:shadowRadius="1"
                    android:textSize="15dp"/>

                <EditText
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/bus_destination"/>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="50"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp">

                        <TextView
                            android:fontFamily="sans-serif-light"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Departure Time"
                            android:textColor="#ff7600"
                            android:shadowColor="#000"
                            android:shadowDx="-1"
                            android:shadowDy="-1"
                            android:shadowRadius="1"
                            android:textSize="15dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingRight="10px"
                            android:weightSum="100">

                            <EditText
                                android:focusable="false"
                                android:layout_weight="100"
                                android:layout_marginTop="5dp"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:id="@+id/bus_departure_time"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="50"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp">

                        <TextView
                            android:fontFamily="sans-serif-light"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Reach Time"
                            android:textColor="#ff7600"
                            android:shadowColor="#000"
                            android:shadowDx="-1"
                            android:shadowDy="-1"
                            android:shadowRadius="1"
                            android:textSize="15dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingRight="10px"
                            android:weightSum="100">

                            <EditText
                                android:focusable="false"
                                android:layout_weight="100"
                                android:layout_marginTop="5dp"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:id="@+id/bus_reach_time"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>
        <LinearLayout
            android:layout_weight="90"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#E65100"
                android:text="Submit"
                android:fontFamily="sans-serif-light"
                android:textColor="#FFF"
                android:id="@+id/add_schedule_submit_btn"/>

        </LinearLayout>

    </LinearLayout>
    <!-- Content Map -->

    <!-- Time Picker -->
    <LinearLayout
        android:id="@+id/time_picker_box"
        android:visibility="invisible"
        android:background="#99000000"
        android:paddingTop="30dp"
        android:paddingBottom="70dp"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="100">

            <TimePicker
                android:id="@+id/time_picker"
                android:textAlignment="center"
                android:layout_weight="10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TimePicker>

            <Button
                android:id="@+id/time_pick_ok_btn"
                android:layout_weight="90"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ok"
                android:textColor="#FFF"
                android:background="#E65100"/>

        </LinearLayout>

    </LinearLayout>
    <!-- Time Picker -->

</RelativeLayout>
